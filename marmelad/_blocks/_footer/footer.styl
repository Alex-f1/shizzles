.footer
  flex: none
  height: 515px
  overflow: hidden
  padding-top: 50px

  &__section
    max-width: 1630px
    width: 100%
    height: 100%
    margin-right: auto
    margin-left: auto
    // background-image: url('../img/footer-bg2.png')
    background-image: url('../img/footer-bg.png')
    background-repeat: no-repeat
    background-position: 50% 0
    // background-position: 50% 100%
    background-size: cover
    position: relative

  &__token-info
    width: 282px
    height: 132px
    background: linear-gradient(180deg, #DBE6F7 17.41%, #FFFFFF 100%)
    border-radius: 20px
    display: flex
    flex-direction: column
    align-items: center
    padding: 12px
    margin-right: auto
    margin-left: auto
    // margin-bottom: 40px
    margin-bottom: 50px
    position: relative
    top: -50px

    &:after
      content: ''
      position: absolute
      width: 244px
      height: 48px
      bottom: -15px
      left: 50%
      transform: translateX(-50%)
      background-color: #A6B5CC
      filter: blur(28px)
      z-index: -1

  &__token-pic
    width: 190px
    margin-bottom: 5px

    img
      vertical-align: top

  &__link
    font-size: 16px
    color: #20B01D
    font-weight: 700
    line-height: 1.1
    text-decoration: underline

    &:hover
      text-decoration: none

  &__logo
    max-width: 265px
    width: 100%
    margin-right: auto
    margin-left: auto
    margin-bottom: 25px
    filter: drop-shadow(0px 11px 41px rgba(26, 49, 25, 0.28))
    border-radius: 20px

    img
      vertical-align: top

  &__info
    text-align: center

    a, span
      font-size: 16px
      color: #FFF
      font-weight: 700
      line-height: 1.1
      text-align: center
      text-decoration: underline
      display: block
      margin-bottom: 10px

      @media (max-width: 374px)
        font-size: 14px

    a
      &:hover
        text-decoration: none

  &__bg-pics
    @media (max-width: 1099px)
      display: none

  &__bg-pic
    position: absolute

    img
      vertical-align: top

    &--diamond
      width: 128px
      // top: 120px
      // left: 250px
      top: 50px
      // top: 90px
      left: 320px

      @media (max-width: 1280px)
        top: 80px
        left: 100px

    &--cash
      width: 160px
      // bottom: 20px
      // left: 220px
      bottom: 70px
      left: 270px

      @media (max-width: 1599px)
        bottom: 100px
        left: 200px

      @media (max-width: 1280px)
        bottom: 70px
        left: 0px

    &--diamond2
      width: 134px
      // top: 20px
      // right: 320px
      top: 15px
      right: 430px
      // top: 30px
      // right: 275px

      @media (max-width: 1599px)
        right: 245px

      @media (max-width: 1280px)
        right: 75px

    &--coin
      width: 134px
      // right: 80px
      // right: 205px
      // bottom: 40px
      right: 200px
      bottom: 60px

      @media (max-width: 1599px)
        right: 200px
        bottom: 110px

      @media (max-width: 1280px)
        right: 30px
        bottom: 120px