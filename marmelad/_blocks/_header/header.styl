.header
  flex: none
  position: relative

  &:after
    content: ''
    top: 100%
    left: 50%
    transform: translateX(-50%)
    position: absolute
    width: 410px
    height: 20px
    background-color: rgba(255, 255, 255, 0.8)
    backdrop-filter: blur(38px)
    clip-path: polygon(0 0, 100% 0, 85% 100%, 15% 100%)

    @media (max-width: 959px)
      display: none

  &__mobile-panel
    position: absolute
    top: -150px
    width: 100%
    background-color: rgba(255, 255, 255, 0.63)
    backdrop-filter: blur(38px)
    border-radius: 0 0 50px 50px
    padding: 15px 20px 20px 20px
    display: flex
    flex-direction: column
    align-items: center
    opacity: 0
    visibility: hidden
    transition: opacity 0.3s, top 0.3s, ease 0.3s

    @media (min-width: 960px)
      display: none

    &._is-show
      top: 100%
      opacity: 1
      visibility: visible

