html, body
  margin: 0
  padding: 0

html
  min-height: 100%
  min-height: 100vh

.app
  display: flex
  flex-direction: column
  height: 100%
  height: 100vh

  &__wrapper
    display: flex
    flex-direction: column
    min-height: 100%
    min-height: 100vh

  &__content
    display: flex
    flex: 1 0 auto

  &__main
    flex: 1

  &._is-not-supported-browser
    .header
      &:after
        background-color: #fff

    .hero
      margin-top: 0

    .road-map__read-link
      background-color: rgba(255, 255, 255, 0.9)

    .price-info__table
      @media (min-width: 960px)
        background-color: rgba(255, 255, 255, 0.8)

    .video-preview__button-play
      background-color: rgba(147, 147, 147, 0.9)

    .header__mobile-panel
      background-color: rgba(255, 255, 255, 0.9)

    .first-screen__social
      background-color: rgba(255, 255, 255, 0.9)

    .remodal-overlay
      background-color: rgba(38, 38, 38, 0.9)

.button-default
  color: #FFF
  text-decoration: none
  display: flex
  align-items: center
  justify-content: center
  border: none
  background-color: #20B01D
  border-radius: 50px
  cursor: pointer
  padding: 15px
  min-width: 85px
  transition: transform 0.5s cubic-bezier(0.2, 3, 0.4, 1) 0s, background-color 0.3s, ease 0.3s

  span
    font-size: 18px
    font-weight: 700
    line-height: 1

  &--popup
    min-width: 125px
    padding-right: 20px
    padding-left: 20px
    border-radius: 15px
    margin-right: auto
    margin-left: auto
    position: relative

    span
      font-size: 20px
      font-family: $fonts.extra
      line-height: 1

    &:after
      content: ''
      width: 80%
      height: 35px
      position: absolute
      bottom: -18px
      left: 50%
      transform: translateX(-50%)
      background-color: #20B01D
      opacity: 0.5
      border-radius: 0 0 50% 50%
      filter: blur(10px)
      z-index: 1

  &:hover
    background-color: darken(#20B01D, 15%)
    transform: scale(1.1)

.remodal
  max-width: 515px
  background-color: #FFFFFF
  box-shadow: 0px 4px 20px rgba(64, 181, 66, 0.27)
  border-radius: 20px
  padding: 30px

.remodal-overlay
  opacity: 1
  background-color: rgba(59, 92, 116, 0.21)
  backdrop-filter: blur(5px)

.remodal-close
  top: 5px
  right: 5px

  &:before
    content: ''
    width: 16px
    height: 16px
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
