html, body
  margin: 0
  padding: 0

html
  min-height: 100%
  min-height: 100vh

.app
  display: flex
  flex-direction: column
  height: 100%
  height: 100vh

  &__wrapper
    display: flex
    flex-direction: column
    min-height: 100%
    min-height: 100vh

  &__content
    display: flex
    flex: 1 0 auto

  &__main
    flex: 1

  &._is-not-supported-browser
    .header
      &:after
        background-color: #fff

    .hero
      margin-top: 0

    .road-map__read-link
      background-color: rgba(255, 255, 255, 0.9)

    .price-info__table
      @media (min-width: 960px)
        background-color: rgba(255, 255, 255, 0.8)

    .video-preview__button-play
      background-color: rgba(147, 147, 147, 0.9)

    .header__mobile-panel
      background-color: rgba(255, 255, 255, 0.9)

    .first-screen__social
      background-color: rgba(255, 255, 255, 0.9)

    .remodal-overlay
      background-color: rgba(38, 38, 38, 0.9)

.button-default
  color: #FFF
  text-decoration: none
  display: flex
  align-items: center
  justify-content: center
  border: none
  background-color: #20B01D
  border-radius: 50px
  cursor: pointer
  padding: 15px
  min-width: 85px
  transition: transform 0.5s cubic-bezier(0.2, 3, 0.4, 1) 0s, background-color 0.3s, ease 0.3s

  span
    font-size: 18px
    font-weight: 700
    line-height: 1

  &--popup
    min-width: 125px
    padding-right: 20px
    padding-left: 20px
    border-radius: 15px
    margin-right: auto
    margin-left: auto
    position: relative

    span
      font-size: 20px
      font-family: $fonts.extra
      line-height: 1

    &:after
      content: ''
      width: 80%
      height: 35px
      position: absolute
      bottom: -18px
      left: 50%
      transform: translateX(-50%)
      background-color: #20B01D
      opacity: 0.5
      border-radius: 0 0 50% 50%
      filter: blur(10px)
      z-index: 1

  &:hover
    background-color: darken(#20B01D, 15%)
    transform: scale(1.1)

.remodal
  max-width: 515px
  background-color: #FFFFFF
  box-shadow: 0px 4px 20px rgba(64, 181, 66, 0.27)
  border-radius: 20px
  padding: 30px

.remodal-overlay
  opacity: 1
  background-color: rgba(59, 92, 116, 0.21)
  backdrop-filter: blur(5px)

.remodal-close
  top: 5px
  right: 5px

  &:before
    content: ''
    width: 16px
    height: 16px
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    background-image: url("data:image/svg+xml,%3Csvg width='16' height='16' viewBox='0 0 16 16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='20.3098' height='1.85519' rx='0.927596' transform='matrix(0.707107 0.707107 -0.697767 0.716325 1.32153 0)' fill='%2320B01D'/%3E%3Crect width='20.3446' height='1.85519' rx='0.927596' transform='matrix(0.707107 -0.707107 0.697767 0.716325 0.276855 14.3882)' fill='%2320B01D'/%3E%3C/svg%3E%0A")
    background-position: 0 0
    background-repeat: no-repeat
    background-size: contain

.status-table
  max-width: 1440px
  width: 100%

  &__greeting-name
    font-size: 18px
    color: #000
    font-family: $fonts.secondary
    font-weight: 700
    line-height: 1.1
    margin-bottom: 25px

  &__table
    position: relative
    z-index: 5

    @media (max-width: 640px)
      overflow-y: auto

    table
      width: 100%
      border-spacing: 0 20px

      @media (max-width: 640px)
        width: 700px

      thead
        th
          font-size: 16px
          color: #849AAE
          font-family: $fonts.secondary
          font-weight: 700
          line-height: 1.1
          text-align: left
          padding: 5px 8px
          width: 17%

          @media (max-width: 767px)
            font-size: 10px
            padding-top: 0
            padding-bottom: 0

    tbody
      tr
        position: relative

        &:after
          content: ''
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
          box-shadow: 0px -4px 11px rgba(255, 255, 255, 0.97), 0px 4px 8px #CCDCF2
          border-radius: 42px
          transition: box-shadow 0.3s, filter 0.3s, ease 0.3s

          @media (max-width: 767px)
            border-radius: 14px

        &:hover
          td
            background-color: #CBD6E8

          &:after
            box-shadow: none
            filter: none

        td
          font-size: 16px
          color: #849aae
          font-family: $fonts.secondary
          font-weight: 700
          line-height: 1.1
          width: 17%
          background-color: #EAF1FB
          padding: 18px 8px
          position: relative
          z-index: 2
          transition: background-color 0.3s, ease 0.3s

          @media (max-width: 767px)
            font-size: 12px

          @media (max-width: 374px)
            font-size: 10px
            padding-right: 5px
            padding-left: 5px

          &:first-child
            padding-left: 25px
            border-radius: 42px 0 0 42px

            @media (max-width: 767px)
              border-radius: 14px 0 0 14px

          &:nth-child(2)
            .status-name
              display: flex
              align-items: center

              span
                width: 75px

                @media (max-width: 767px)
                  width: 55px

              .button-info
                flex: 0 0 30px
                width: 30px
                max-width: 30px
                height: 30px
                border-radius: 50%
                overflow: hidden
                background-color: transparent
                border: 1px solid #20B01D
                position: relative
                cursor: pointer
                margin-left: 5px

                &:after
                  content: ''
                  width: 8px
                  height: 8px
                  position: absolute
                  top: 50%
                  left: 50%
                  transform: translate(-50%, -50%) rotate(-45deg)
                  border-left: 1px solid #20B01D
                  border-bottom: 1px solid #20B01D
                  margin-top: -2px
                  transition: transform 0.3s, ease 0.3s

                &._is-active
                  &:after
                    transform: translate(-50%, -50%) rotate(-225deg)
                    margin-top: 2px

          &:last-child
            border-radius: 0 42px 42px 0

            @media (max-width: 767px)
              border-radius: 0 14px 14px 0

  &__status-info-text
    font-size: 16px
    color: #849aae
    font-family: $fonts.secondary
    font-weight: 700
    line-height: 1.1
    background-color: #EAF1FB
    width: 100%
    height: 100%
    box-shadow: 0px -4px 11px rgba(255, 255, 255, 0.97), 0px 4px 8px #CCDCF2
    border-radius: 0 0 20px 20px
    padding: 35px 25px
    margin-top: -40px
    opacity: 0
    visibility: hidden
    transform: translateY(-50px)
    transition: opacity 0.3s, transform 0.3s, ease 0.3s

    @media (max-width: 640px)
      width: 700px

    &._is-show
      transform: translateY(0)
      opacity: 1
      visibility: visible
      margin-bottom: 30px

  &__info-code
    margin-bottom: 70px

  &__info-code-item
    display: flex
    align-items: center
    margin-bottom: 15px

    @media (max-width: 479px)
      flex-wrap: wrap
      margin-bottom: 30px

  &__info-code-desc
    font-size: 16px
    color: #364151
    font-family: $fonts.secondary
    font-weight: 400
    line-height: 1.1
    width: 500px
    margin-right: 25px

    @media (max-width: 479px)
      margin-right: 0
      margin-bottom: 15px

    strong
      font-weight: 700

  &__button-change
    margin: 0
    min-width: 200px

    span
      font-size: 18px

    &:after
      display: none

  &__links
    display: flex
    flex-direction: column
    align-items: center
    margin-bottom: 50px

    a
      font-size: 18px
      color: #20B01D
      font-family: $fonts.extra
      font-weight: 400
      line-height: 1.1
      text-align: center
      text-decoration: underline
      margin-bottom: 25px

      &:hover
        text-decoration: none

