.connect-block
  height: 100vh
  background-color: #DBE6F7
  background-image: url('../img/fill-bg.png')
  background-repeat: no-repeat
  background-size: contain
  background-position: 50% -120px

  @media (max-width: 1099px)
    background-position: 50% 0

  @media (max-height: 599px)
    height: auto

  &--enter
    & ^[0]
      &__section
        @media (max-height: 750px)
          padding-top: 0

      &__inner
        @media (max-height: 750px)
          padding-top: 0
          padding-bottom: 0

      &__logo
        margin-bottom: 50px

        @media (max-height: 750px)
          margin-bottom: 0

  &--user
    height: 100%
    background-image: none

    & ^[0]
      &__section
        padding-right: 0
        padding-left: 0

        @media (max-height: 750px)
          padding-top: 0

      &__inner
        @media (max-height: 750px)
          padding-top: 0
          padding-bottom: 0

      &__logo
        margin-bottom: 50px

        @media (max-height: 750px)
          margin-bottom: 0

  &__section
    padding: 25px
    height: 100%

  &__button-back
    width: 27px
    height: 24px
    border: none
    padding: 0
    background-color: transparent
    background-image: url("data:image/svg+xml,%3Csvg width='27' height='24' viewBox='0 0 27 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0.939341 10.9393C0.353554 11.5251 0.353554 12.4749 0.939341 13.0607L10.4853 22.6066C11.0711 23.1924 12.0208 23.1924 12.6066 22.6066C13.1924 22.0208 13.1924 21.0711 12.6066 20.4853L4.12132 12L12.6066 3.51472C13.1924 2.92893 13.1924 1.97919 12.6066 1.3934C12.0208 0.807611 11.0711 0.807611 10.4853 1.3934L0.939341 10.9393ZM27 10.5L2 10.5V13.5L27 13.5V10.5Z' fill='%2320B01D'/%3E%3C/svg%3E%0A")
    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain
    display: block
    cursor: pointer

  &__inner
    height: 100%
    display: flex
    flex-direction: column
    align-items: center
    padding-top: 50px
    padding-bottom: 20px

  &__logo
    max-width: 280px
    width: 100%
    margin-bottom: 135px

    @media (max-width: 1099px)
      margin-bottom: 90px

  &__button-connect
    min-width: auto
    max-width: 250px
    position: relative
    margin-bottom: 25px

    span
      font-size: 20px
      text-align: center
      width: 100%

    &:after
      content: ''
      position: absolute
      width: 255px
      height: 15px
      bottom: -7px
      left: 50%
      transform: translateX(-50%)
      background-color: #20B01D
      opacity: 0.5
      filter: blur(33px)

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    margin-top: auto

    span
      font-size: 13px
      color: #849AAE
      font-family: $fonts.extra
      font-weight: 400
      line-height: 1.1

  &__link
    font-size: 13px
    color: #364151
    font-family: $fonts.extra
    font-weight: 400
    line-height: 1.1
    text-align: center
    text-decoration: underline
    margin-bottom: 5px

    &:hover
      text-decoration: none

.enter-block
  width: 100%
  margin-bottom: 20px

  &__form
    width: 100%

  &__container
    max-width: 440px
    width: 100%
    background-color: #FFFFFF
    box-shadow: 0px 0px 10px rgba(69, 162, 71, 0.15)
    border-radius: 20px
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    padding: 40px 20px
    margin-right: auto
    margin-left: auto

  &__greeting-name
    font-size: 20px
    color: #364151
    font-family: $fonts.secondary
    font-weight: 700
    line-height: 1.2
    margin-bottom: 20px

  &__desc
    font-size: 18px
    color: #849AAE
    font-family: $fonts.secondary
    font-weight: 400
    line-height: 1.3
    text-align: center
    margin-bottom: 20px

    @media (max-width: 639px)
      font-size: 16px

  &__field
    margin-bottom: 20px
    width: 100%

    input
      font-size: 16px
      color: #364151
      font-family: $fonts.secondary
      font-weight: 400
      line-height: 1
      text-align: center
      text-transform: uppercase
      width: 100%
      height: 50px
      background-color: #E3E3E3
      border-radius: 15px
      border: none
      padding: 15px

  &__error
    font-size: 13px
    color: #EB8C8C
    font-family: $fonts.secondary
    font-weight: 400
    line-height: 1.2
    text-align: center
    display: block
    margin-top: 10px

  &__button-ready
    width: 100%

    &:after
      width: 315px

    &:hover
      transform: scale(1.03)