.first-screen
  height: calc(100vh - 150px)

  @media (max-width: 959px)
    height: auto

  &__section, &__inner
    height: 100%

    @media (max-width: 959px)
      height: auto
      position: relative

  &__social
    position: absolute
    bottom: 70px
    left: 0
    width: 100%
    height: 115px
    padding: 10px
    padding-bottom: 25px
    background: rgba(255, 255, 255, 0.63)
    backdrop-filter: blur(15px)
    clip-path: polygon(10% 0, 90% 0, 100% 15%, 100% 100%, 0 100%, 0% 16%)

    @media (min-width: 960px)
      display: none

    .social-links
      &__items
        justify-content: center

      &__item
        margin-right: 40px

  &__social-title
    font-size: 16px
    color: #364151
    font-weight: 700
    line-height: 1.1
    text-align: center
    margin-bottom: 15px