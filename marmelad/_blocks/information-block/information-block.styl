.information-block
  padding-top: 100px
  padding-bottom: 50px

  @media (max-width: 767px)
    padding-top: 50px

  &__inner
    max-width: 1340px + 15px + 15px
    width: 100%
    padding-right: 15px
    padding-left: 15px
    margin-right: auto
    margin-left: auto

  &__item
    @media (max-width: 767px)
      margin-bottom: 50px

    &:nth-child(odd)
      & ^[0]
        &__images
          @media (min-width: 768px)
            order: 1
            margin-left: 90px
            margin-right: 0

            @media (max-width: 959px)
              margin-left: 30px

    &:nth-child(1)
      & ^[0]
        &__icon
          top: 75px
          right: -10%

          @media (max-width: 1439px)
            right 5%  

    &:nth-child(2)
      & ^[0]
        &__icon
          top: 75px
          left: -10%

          @media (max-width: 1439px)
            top: 40px
            left: 10%

    &:nth-child(3)
      & ^[0]
        &__icon
          right: -20%
          bottom: 15px

          @media (max-width: 1439px)
            right: 5%

    &:nth-child(4)
      & ^[0]
        &__icon
          top: 15px
          right: -45%

          @media (max-width: 1599px)
            top: 45px
            right: -20%

          @media (max-width: 1439px)
            top: 15px
            right: 0

  &__body
    display: flex
    align-items: center
    justify-content: space-between

    @media (max-width: 767px)
      flex-direction: column

  &__images
    flex: 0 0 400px
    width: 400px
    max-width: 400px
    height: 400px
    position: relative
    margin-right: 60px

    @media (max-width: 959px)
      margin-right: 30px

    @media (max-width: 767px)
      flex: none
      max-width: 290px
      width: 100%
      height: 290px
      margin-bottom: 20px
      margin-right: 0 !important
      margin-left: 0 !important

  &__pic
    border-radius: 50%

  &__icon
    position: absolute

    @media (max-width: 767px)
      display: none

    img
      vertical-align: top

  &__content
    max-width: 860px

    @media (max-width: 767px)
      text-align: center

  &__name
    font-size: 40px
    color: #364151
    font-weight: 900
    line-height: 1.1
    margin-bottom: 20px
    position: relative
    z-index: 2

    @media (max-width: 767px)
      font-size: 25px

  &__text
    font-size: 22px
    color: #849AAE
    font-weight: 500
    line-height: 1.3
    position: relative
    z-index: 2

    @media (max-width: 767px)
      font-size: 18px