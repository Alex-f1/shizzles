.our-team
  padding-top: 100px
  padding-bottom: 50px

  @media (max-width: 959px)
    padding-top: 25px
    padding-bottom: 0

  &__inner
    max-width: 1330px + 15px + 15px
    width: 100%
    padding-right: 15px
    padding-left: 15px
    margin-right: auto
    margin-left: auto

  &__title
    font-size: 40px
    color: #364151
    font-weight: 900
    line-height: 1.1
    text-align: center
    margin-bottom: 40px

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 20px

  &__items
    display: flex
    flex-wrap: wrap

  &__item
    width: 33.333%
    min-height: 310px
    display: flex
    margin-bottom: 60px

    @media (max-width: 959px)
      width: 50%

    @media (max-width: 639px)
      width: 100%

  &__body
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    width: 100%
    height: 100%

  &__pic-wrapper
    width: 260px
    height: 260px
    border-radius: 50%
    overflow: hidden
    position: relative
    margin-bottom 30px

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-image: url('../img/our-team-item-bg.png')
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      z-index: 1

  &__pic
    width: 240px
    height: 240px
    position: absolute
    top: 50%
    left: 50%
    border-radius: 50%
    transform: translate(-50%, -50%)
    overflow: hidden
    z-index: 2

    @media (max-width: 639px)
      margin-bottom: 20px

    img
      vertical-align: top
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      object-fit: cover
      display: block

  &__content
    // flex: 1 1 auto
    display: flex
    flex-direction: column
    justify-content: flex-end

  &__name
    font-size: 16px
    color: #364151
    font-weight: 500
    line-height: 1.1
    margin-bottom: 5px

  &__position
    font-size: 20px
    color: #364151
    font-weight: 900
    line-height: 1.1

  &__social
    display: flex
    justify-content: center
    margin-top: 5px

    a
      flex: 0 0 23px
      width: 23px
      max-width: 23px
      margin-right: 5px

      img
        vertical-align: top

      &:last-child
        margin-right: 0