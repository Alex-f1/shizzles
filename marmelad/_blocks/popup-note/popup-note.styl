.popup-note
  &--change, &--increase, &--your-status, &--request
    max-width: 700px

  &--your-status
    & ^[0]
      &__text
        max-width: 100%

      &__button-ok
        margin-bottom: 35px

        span
          font-size: 18px

  &--request
    & ^[0]
      &__field
        input
          text-align: left
          text-transform: none

  &__text
    text-align: center
    max-width: 440px
    width: 100%
    margin-left: auto
    margin-right: auto
    margin-bottom: 20px

    p
      font-size: 16px
      color: #364151
      font-family: $fonts.secondary
      font-weight: 400
      line-height: 1.3
      margin-top: 0
      margin-bottom: 20px

      span
        color: #20B01D
        font-weight: 700

      i
        vertical-align: middle

      &:last-child
        margin-bottom: 0

    @media (max-width: 413px)
      max-width: 280px

  &__form
    width: 100%
    text-align: left

  &__container
    display: flex
    flex-direction: column
    text-align: left
    padding: 40px 20px

  &__greeting-name
    font-size: 20px
    color: #364151
    font-family: $fonts.secondary
    font-weight: 700
    line-height: 1.2
    margin-bottom: 20px

  &__desc
    font-size: 18px
    color: #849AAE
    font-family: $fonts.secondary
    font-weight: 400
    line-height: 1.3
    margin-bottom: 20px

    p
      margin-top: 0

      &:last-child
        margin-bottom: 0

    @media (max-width: 639px)
      font-size: 16px

  &__field
    margin-bottom: 20px
    width: 100%

    label
      font-size: 16px
      color: #364151
      font-family: $fonts.secondary
      font-weight: 400
      margin-bottom: 10px
      display: block

    input
      font-size: 16px
      color: #364151
      font-family: $fonts.secondary
      font-weight: 400
      line-height: 1
      text-align: center
      text-transform: uppercase
      width: 100%
      height: 50px
      background-color: #E3E3E3
      border-radius: 15px
      border: none
      padding: 15px

    textarea
      font-size: 16px
      color: #364151
      font-family: $fonts.secondary
      font-weight: 400
      line-height: 1
      text-align: left
      width: 100%
      min-height: 100px
      background-color: #E3E3E3
      border-radius: 15px
      border: 1px solid #000
      padding: 15px

  &__error
    font-size: 13px
    color: #EB8C8C
    font-family: $fonts.secondary
    font-weight: 400
    line-height: 1.2
    text-align: center
    display: block
    margin-top: 10px

  &__buttons
    display: flex
    align-items: center
    margin-top: 25px

    @media (max-width: 540px)
      flex-direction: column

  &__button
    min-width: auto
    width: 200px

    @media (max-width: 540px)
      width: 100%

    &--close
      background-color: #f04747

      @media (max-width: 540px)
        margin-top: 30px

      &:after
        background-color: #f04747

      &:hover
        background-color: darken(#f04747, 5%)