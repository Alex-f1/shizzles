.popup-note
  &__text
    text-align: center
    max-width: 440px
    width: 100%
    margin-left: auto
    margin-right: auto
    margin-bottom: 20px

    p
      font-size: 16px
      color: #364151
      font-family: $fonts.secondary
      font-weight: 400
      line-height: 1.3
      margin-bottom: 20px

      span
        color: #ff2a2a
        font-weight: 700

      i
        vertical-align: middle

      &:last-child
        margin-bottom: 0

    @media (max-width: 413px)
      max-width: 280px