.price-info
  padding-top: 50px
  padding-bottom: 100px
  position: relative
  z-index: 5
  background: linear-gradient(180deg, #FFFFFF 0%, #FFFFFF 9.37%, #F0F6FE 67.82%, #FFFFFF 100%)

  @media (max-width: 1599px)
    background: linear-gradient(180deg, #FFFFFF 0%, #FFFFFF 9.37%, #F0F6FE 55.11%, #FFFFFF 100%)

  @media (max-width: 959px)
    padding-top: 25px
    padding-bottom: 50px
    background: none

  &__inner
    max-width: 1630px
    width: 100%
    margin-left: auto
    margin-right: auto

    @media (max-width: 1599px)
      max-width: 1240px

  &__wrapper
    position: relative

    &:after
      content: ''
      position: absolute
      width: 965px
      height: 30px
      left: 50%
      top: 100%
      transform: translateX(-50%)
      background-color: #A6B5CC
      filter: blur(44px)

      @media (max-width: 959px)
        display: none

  &__title
    font-size: 40px
    color: #364151
    font-weight: 900
    line-height: 1.1
    text-align: center
    margin-bottom: 30px

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 20px

  &__table
    padding: 50px 40px
    position: relative
    z-index: 5
    background-color: #fff

    @media (min-width: 960px)
      border: 1px solid #fff
      background-color: rgba(255, 255, 255, 0.25)
      backdrop-filter: blur(39px)
      border-radius: 44px

    @media (max-width: 1599px)
      background-color: rgba(255, 255, 255, 0.51)

    @media (max-width: 959px)
      padding-top: 0
      padding-bottom: 0
      padding-right: 15px
      padding-left: 15px

    table
      width: 100%
      border-spacing: 0 20px

      thead
        th
          font-size: 18px
          color: #849AAE
          font-family: $fonts.secondary
          font-weight: 700
          line-height: 1.1
          text-align: left
          padding: 18px 8px
          width: 20%

          @media (max-width: 767px)
            font-size: 10px
            padding-top: 0
            padding-bottom: 0

    tbody
      tr
        position: relative

        &:after
          content: ''
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
          box-shadow: 0px -4px 11px rgba(255, 255, 255, 0.97), 0px 4px 8px #CCDCF2
          background: rgba(234, 241, 251, 0.22)
          border-radius: 14px

          @media (max-width: 1599px)
            background-color: #EAF1FB

        td
          font-size: 18px
          color: #849aae
          font-family: $fonts.secondary
          font-weight: 700
          line-height: 1.1
          width: 20%
          padding: 18px 8px
          position: relative
          z-index: 2

          @media (max-width: 767px)
            font-size: 12px

          &:first-child
            span
              display: flex
              align-items: center

