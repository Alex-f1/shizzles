  &__elements-bg
    @media (max-width: 959px)
      display: none

  &__element-bg
    display: block
    position: absolute
    z-index: 1

  .coin-pic
    top: -100px
    left: 40px

    @media (max-width: 1599px)
      top: auto
      bottom: -85px
      left: -100px

    @media (max-width: 1439px)
      display: none

  .coin-pic2
    top: -50px
    right: 60px

    @media (max-width: 1599px)
      top: -70px
      right: 90px

  .cash-pic
    bottom: -140px
    left: 20px

    @media (max-width: 1599px)
      top: -90px
      left: 40px
      bottom: auto

  .cash-pic2
    bottom: -55px
    right: 15px

    @media (max-width: 1599px)
      right: 70px

  .green-circle
    top: -40%
    left: -45%

    @media (max-width: 1599px)
      display: none

  .orange-circle
    top: -100%
    right: -40%

    @media (max-width: 1599px)
      display: none