.road-map
  padding-top: 50px
  padding-bottom: 50px

  @media (max-width: 767px)
    padding-top: 25px

  &__inner
    max-width: 1000px
    width: 100%
    margin-right: auto
    margin-left: auto

  &__title
    font-size: 40px
    color: #364151
    font-weight: 900
    line-height: 1.2
    text-align: center
    margin-bottom: 65px

    @media (max-width: 959px)
      font-size: 48px
      margin-bottom: 30px

  &__items
    display: flex
    flex-wrap: wrap
    position: relative
    margin-right: auto
    margin-left: auto
    height: 700px
    padding-left: 200px
    margin-bottom: 186px

    @media (max-width: 1279px)
      padding-left: 130px

    @media (max-width: 959px)
      display: block
      padding-left: 0
      height: 1080px
      margin-bottom: 75px

  &__pic
    position: absolute
    top: 40px
    left: -8%
    width: 1075px
    height: 870px

    @media (max-width: 1279px)
      left: -15%

    @media (max-width: 959px)
      top: 85px
      width: 360px
      left: 46%
      transform: translateX(-50%)

    img
      vertical-align: top

  &__pic-desktop
    @media (max-width: 959px)
      display: none

  &__pic-mobile
    @media (min-width: 960px)
      display: none

  &__item
    width: 50%
    align-self: flex-start
    margin-bottom: 50px

    @media (max-width: 959px)
      margin-right: auto
      margin-left: auto
      width: 240px
      transform: none !important
      margin-bottom: 40px

  &__body
    border-left: 2px solid #BFD1E1
    padding-left: 20px
    min-height: 85px

  &__name
    font-size: 20px
    color: #364151
    font-weight: 900
    line-height: 1.1
    margin-bottom: 5px

  &__text
    font-size: 20px
    color: #849AAE
    font-weight: 500
    line-height: 1.3

    span
      font-size: 25px
      color: #20B01D

  &__bottom
    position: relative
    z-index: 5
    text-align: center

    &:after
      content: ''
      position: absolute
      width: 255px
      height: 30px
      left: 50%
      top: 80px
      transform: translateX(-50%)
      background-color: #A6B5CC
      filter: blur(15px)
      background-repeat: no-repeat
      background-position: 0 0
      z-index: -1

  &__read-link
    font-size: 30px
    color: #20B01D
    font-weight: 700
    line-height: 1.1
    text-align: center
    text-decoration: underline
    background-color: rgba(255, 255, 255, 0.47)
    backdrop-filter: blur(25px)
    border-radius: 20px
    max-width: 420px
    width: 100%
    margin-left: auto
    margin-right: auto
    padding: 40px 20px
    display: block
    position: relative
    z-index: 2

    @media (max-width: 959px)
      max-width: 340px

  &__note
    font-size: 15px
    color: #849AAE
    font-weight: 500
    line-height: 1.1
    max-width: 320px
    width: 100%
    min-height: 50px
    padding: 10px 20px
    position: relative
    background-color: #EAF1FB
    border-radius: 20px
    text-align: left
    display: none
    margin-left: auto
    margin-right: auto
    margin-top: 50px

    @media (max-width: 959px)
      display: block

    &--desktop
      align-self: flex-start
      transform: translate(50px, 50px)
      margin: 0

      @media (min-width: 960px)
        display: block

      @media (max-width: 959px)
        display: none

    span
      font-size: 40px
      color: #20B01D
      font-family: $fonts.secondary
      font-weight: 700
      line-height: 1
      position: absolute
      top: -8px
      left: 2px