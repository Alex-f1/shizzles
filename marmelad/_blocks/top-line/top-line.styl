    @media (min-width: 960px)
      display: none

  &__date
    font-size: 16px
    color: #364151
    font-weight: 700
    line-height: 1
    text-align: center
    transform: translateY(5px)
    transition: transform 0.3s, opacity 0.3s, ease 0.3s

    @media (max-width: 959px)
      display: none

    span
      color: #20b01d

  &__language
    margin-left: 130px

    @media (max-width: 1599px)
      margin-left: 75px

    @media (max-width: 1099px)
      margin-left: 25px

    @media (max-width: 959px)
      margin-left: 0

  &__language-link
    text-decoration: none
    display: flex
    align-items: center

    span
      font-size: 16px
      color: #364151
      font-weight: 700
      line-height: 1

      @media (max-width: 959px)
        display: none

  &__language-icon
    flex: 32px
    width: 32px
    max-width: 32px
    height: 32px
    margin-right: 12px

    @media (max-width: 959px)
      flex: 25px
      width: 25px
      max-width: 25px
      height: 25px