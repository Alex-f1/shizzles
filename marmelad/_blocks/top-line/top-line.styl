      background-size: contain
      background-position: 0 0

  &__button-video
    flex: 0 0 165px
    width: 165px
    max-width: 165px
    display: flex
    align-items: center

    @media (max-width: 1099px)
      flex: none

    @media (max-width: 959px)
      display: none

    &:before
      content: ''
      flex: 0 0 39px
      max-width: 39px
      width: 39px
      height: 40px
      margin-right: 10px
