.top-line
  width: 100%
  height: 150px
  background-color: rgba(255, 255, 255, 0.63)
  backdrop-filter: blur(38px)
  position: fixed
  top: 0
  left: 0
  z-index: 500
  transition: height 0.3s, background-color 0.3s, ease 0.3s

  @media (max-width: 959px)
    height: 75px

  &._is-fixed
    box-shadow: 0px -4px 11px rgba(255, 255, 255, 0.97), 0px 4px 8px #ccdcf2
    height: 100px
    background-color: rgba(255, 255, 255, 0.9)

    @media (max-width: 959px)
      height: 75px

    & ^[0]
      &__button-video
        display: none

        &--fixed
          @media (min-width: 960px)
            display: flex !important

      &__date
        @media (min-width: 960px)
          transform: translateY(-150px)
          opacity: 0
          visibility: hidden

      &__right
        .social-links, .top-line__language
          @media (min-width: 960px)
            display: none

    .logo
      &__link
        @media (min-width: 960px)
          max-width: 150px
          width: 100%

  &__section
    height: 100%

  &__inner
    display: flex
    align-items: center
    justify-content: space-between
    max-width: 1840px + 40px + 40px
    width: 100%
    height: 100%
    padding-right: 40px
    padding-left: 40px
    margin-right: auto
    margin-left: auto

    @media (max-width: 1099px)
      padding-right: 25px
      padding-left: 25px

  &__left
    width: 33.333%
    display: flex
    align-items: center

    @media (max-width: 1099px)
      flex-direction: column
      align-items: flex-start

    @media (max-width: 959px)
      order: 1
      align-items: flex-end

    @media (max-width: 959px)
      flex: 0 0 35px
      width: 35px
      max-width: 35px

  &__middle
    width: 22%
    display: flex
    flex-direction: column
    align-items: center

    @media (max-width: 959px)
      flex: 0 0 100px
      width: 100px
      max-width: 100px

  &__right
    width: 33.333%
    display: flex
    align-items: center
    justify-content: flex-end

    @media (max-width: 959px)
      order: -1
      justify-content: flex-start

    @media (max-width: 959px)
      flex: 0 0 35px
      width: 35px
      max-width: 35px

    .social-links
      margin-left: auto

      @media (max-width: 959px)
        display: none

      &__item
        margin-right: 20px

        @media (max-width: 1099px)
          margin-right: 10px

  &__button-connect
    flex: 0 0 215px
    width: 215px
    max-width: 215px
    margin-right: 20px

    @media (max-width: 1099px)
      flex: none
      margin-right: 0
      margin-bottom: 10px

    @media (max-width: 959px)
      display: none

    &:before
      content: ''
      flex: 0 0 17px
      max-width: 17px
      width: 17px
      height: 22px
      margin-right: 15px
