  &__number
    font-family: $fonts.extra
    color: #364151
    font-weight: 700
    margin-right: 15px
    display: flex
    align-items: flex-end
    padding-left: 10px

    strong
      font-style: normal
      font-size: 45px
      line-height: 0.7

    small
      font-size: 16px
      line-height: 1

  &__button-inc
    @media (max-width: 767px)
      margin-right: 0

    &:after
      display: none

  &__table
    position: relative
    z-index: 5

    table
      width: 100%
      border-spacing: 0 20px

      thead
        th
          font-size: 16px
          color: #849AAE
          font-family: $fonts.secondary
          font-weight: 700
          line-height: 1.1
          text-align: left
          padding: 5px 8px
          width: 20%

          @media (max-width: 767px)
            font-size: 10px
            padding-top: 0
            padding-bottom: 0

    tbody
      tr
        position: relative
        background-color: #EAF1FB
        transition: background-color 0.3s, ease 0.3s

        &:after
          content: ''
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
          box-shadow: 0px -4px 11px rgba(255, 255, 255, 0.97), 0px 4px 8px #CCDCF2
          border-radius: 42px
          transition: box-shadow 0.3s, filter 0.3s, ease 0.3s

          @media (max-width: 767px)
            border-radius: 14px

        &:hover
          background-color: #CBD6E8

          &:after
            box-shadow: none
            filter: none

        td
          font-size: 16px
          color: #849aae
          font-family: $fonts.secondary
          font-weight: 700
          line-height: 1.1
          width: 20%
          padding: 18px 8px
          position: relative
          z-index: 2

          @media (max-width: 767px)
            font-size: 12px

          @media (max-width: 374px)
            font-size: 10px
            padding-right: 5px
            padding-left: 5px

          &:first-child
            border-radius: 42px 0 0 42px

            @media (max-width: 767px)
              border-radius: 14px 0 0 14px

            span
              display: flex
              align-items: center

              i
                width: 16px
                height: 16px
                display: inline-block
                vertical-align: top
