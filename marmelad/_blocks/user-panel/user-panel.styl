.user-panel
  width: 100%

  &__inner
    max-width: 1100px + 15px + 15px
    width: 100%
    padding-right: 15px
    padding-left: 15px
    margin-right: auto
    margin-left: auto

  &__info
    display: flex

    @media (max-width: 767px)
      flex-direction: column

  &__col
    min-height: 145px
    padding: 10px
    background-color: #EAF1FB
    box-shadow: 0px -4px 11px rgba(255, 255, 255, 0.97), 0px 4px 8px #CCDCF2
    border-radius: 14px
    margin-right: 10px

    @media (max-width: 767px)
      flex: none
      width: 100% !important
      max-width: 100% !important
      margin-right: 0
      margin-bottom: 20px
      min-height: auto

    &--left, &--right
      flex: 0 0 250px
      width: 250px
      max-width: 250px

    &--left
      & ^[0]
        &__note
          @media (min-width: 768px)
            position: absolute
            bottom: 0
            left: 10px

          @media (max-width: 767px)
            margin-top: 5px

    &--middle
      width: 56%

      @media (max-width: 767px)
        order: 1

    &--right
      & ^[0]
        &__note
          margin-bottom: 20px

    &:last-child
      margin-right: 0

  &__body
    width: 100%
    height: 100%
    position: relative

  &__user-info
    display: flex
    align-items: center
    padding-top: 5px

  &__user-pic
    flex: 0 0 78px
    width: 78px
    max-width: 78px
    height: 78px
    margin-right: 8px

  &__greeting-name
    color: #364151
    font-family: $fonts.secondary

    span
      font-weight: 400
      font-size: 16px
      line-height: 1.1
      display: block
      margin-bottom: 5px

    strong
      font-size: 20px
      font-weight: 700
      line-height: 1.1
      display: block
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis

  &__note
    font-size: 16px
    color: #849AAE
    font-family: $fonts.secondary
    font-weight: 400
    line-height: 1.2
    margin-bottom: 10px

    a
      font-size: 16px
      font-weight: 400
      color: #20b01d

      &:hover
        text-decoration: none

  &__code
    padding: 15px 10px 10px 10px

    strong
      font-size: 14px
      color: #364151
      font-family: $fonts.secondary
      font-weight: 700
      line-height: 1.1
      margin-bottom: 10px
      display: block

  &__control
    display: flex
    padding-top: 10px

  &__control-link
    font-size: 16px
    color: #323E3B
    font-family: $fonts.secondary
    font-weight: 400
    line-height: 1
    text-decoration: none
    display: flex
    align-items: center
    margin-right: 50px
    transition: color 0.3s, ease 0.3s

    &:hover
      color: #20b01d

    &:before
      content: ''
      margin-right: 5px
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain

    &--copy
