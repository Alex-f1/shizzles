.what-need
  padding-top: 100px
  position: relative
  z-index: 7

  @media (max-width: 959px)
    padding-top: 50px

  &__inner
    padding-right: 15px
    padding-left: 15px

  &__title
    font-size: 40px
    color: #364151
    font-weight: 900
    line-height: 1.1
    text-align: center
    margin-bottom: 30px

    @media (max-width: 767px)
      font-size: 30px
      margin-bottom: 50px

  &__items
    display: flex

    @media (max-width: 959px)
      flex-wrap: wrap

    @media (max-width: 767px)
      flex-direction: column
      align-items: center

  &__item
    width: 25%

    @media (max-width: 959px)
      width: 50%
      margin-bottom: 30px

    @media (max-width: 767px)
      width: 100%

  &__body
    display: flex
    flex-direction: column
    align-items: center

  &__pic
    // max-width: 136px
    max-width: 110px
    width: 100%
    text-align: center
    margin-right: auto
    margin-left: auto
    margin-bottom: 5px

    img
      vertical-align: top

  &__text
    font-size: 20px
    color: #849AAE
    font-weight: 400
    line-height: 1.3
    text-align: center

    br
      @media (max-width: 767px)
        display: none

    a
      color: #20b01d

      &:hover
        text-decoration: none

  &__bottom
    text-align: center
    margin-top: 60px

    @media (max-width: 959px)
      margin-top: 30px

  &__note
    font-size: 20px
    color: #364151
    font-weight: 700
    line-height: 1.1
    text-align: center
    padding: 20px 25px
    max-width: 500px
    width: 100%
    background-color: #DBE6F7
    border-radius: 100px
    margin-left: auto
    margin-right: auto